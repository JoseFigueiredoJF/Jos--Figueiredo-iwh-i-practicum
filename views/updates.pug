doctype html
html(lang="en")
    head
        title= `${title}`
        link(rel="stylesheet", href="/css/style.css")
    body 
        a(href='/') Return to the homepage
        .form-wrapper
            form(method="POST")
                label(for="newVal") Game Name
                input(type="text" name="newVal" required)
                label(for="newVal2") Game Platforms, separate with ";", choose from PC,Phone,Playstation,Xbox
                input(type="text" name="newVal2" required)
                label(for="newVal3") Game Release Year
                input(type="number" name="newVal3" required)
                input(type="submit" value="Submit")