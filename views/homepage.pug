doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Games table
        a(href='/update-cobj') Add/Update this table
        .cards 
            each game in data
                .card 
                    h2.card__name Game Name: #{game.properties.name}
                    p On these platforms #{game.properties.platform}
                    p.card__email Released on #{game.properties.release_year}        