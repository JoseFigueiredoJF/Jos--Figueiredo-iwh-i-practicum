doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Games table
        .cards 
            each game in data
                .card 
                    h2.card__name #{game.properties.name}  #{game.properties.platform}
                    p.card__email #{game.properties.release_year}       